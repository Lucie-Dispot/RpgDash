= form_with(model: song, local: true) do |form|
  - if song.errors.any?
    #error_explanation
      h2
        = pluralize(song.errors.count, "error")
        |  prohibited this song from being saved:
      ul
        - song.errors.full_messages.each do |message|
          li
            = message
  .field
    = form.label :file
    = form.file_field :file, id: :song_file
    / = form.text_field :file, id: :song_file
  .field
    = form.label :source
    = form.text_field :source, id: :song_source
  .field
    = form.label :author
    = form.text_field :author, id: :song_author
  .field
    = form.label :duration
    = form.number_field :duration, id: :song_duration
  .field
    = form.label :loop
    = form.check_box :loop, id: :song_loop
  .field
    = form.label :attr_stress
    = form.number_field :attr_stress, id: :song_attr_stress
  .field
    = form.label :attr_epicness
    = form.number_field :attr_epicness, id: :song_attr_epicness
  .field
    = form.label :attr_happiness
    = form.number_field :attr_happiness, id: :song_attr_happiness
  .actions
    = form.submit
